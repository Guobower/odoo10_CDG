<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="coffin_inquire_form" model="ir.ui.view">
            <field name="name">coffin inquire form</field>
            <field name="model">coffin.inquire</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="5">
                            <field name="year_start" string="繳費期間"/>
                            <field name="year_end" nolabel="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button type="object" name="coffin_search" string="確定" class="oe_highlight"/>
                        <button special="cancel" string="取消"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="coffin_inquire_action" name="施棺查詢" res_model="coffin.inquire"
                    view_mode="form" target="new" multi="False"/>
    </data>
</odoo>