<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wizard_credit_batch_form" model="ir.ui.view">
            <field name="name">credit batch form</field>
            <field name="model">wizard.credit.batch</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group col = "4">
                            <field name="donate_date"/>
                            <field name="payment_method" />
                            <field name="work_id"/>
                        </group>
                        <group col = "9">
                            <field name="sum_donor_num"/>
                            <field name="sum_donate_total" />
                            <field name="clean_all_check"/>
                        </group>
                    </sheet>
                    <footer>
                        <button type="object" name="confirm_donate" string="確定批次捐款" class="oe_highlight"/>
                        <button special="cancel" string="取消"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>