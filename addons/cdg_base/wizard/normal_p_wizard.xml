<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="donate_wizard_form" model="ir.ui.view">
            <field name="name">donate_wizard_form</field>
            <field name="model">normal.p.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <span STYLE='FONT-SIZE:25PX'>捐款項目</span>
                                <group col="6">
                                    <field name="bridge"/>
                                    <field name="bridge_money" nolabel="1"/>
                                    <field name="road"/>
                                    <field name="road_money" nolabel="1"/>
                                    <field name="coffin"/>
                                    <field name="coffin_money" nolabel="1"/>
                                    <field name="poor_help" />
                                    <field name="poor_help_money" nolabel="1"/>

                                </group>
                    </sheet>
                    <footer>
                        <button type="object" name="confirm" string="OK" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_donate_wizard" name="批次捐款" res_model="normal.p.wizard"
                    view_mode="form" target="new" multi="True"/>

        <record id="open_invoice" model="ir.actions.server">
            <field name="name">批次捐款</field>
            <field name="res_model">normal.p</field>
            <field name="model_id" ref="cdg_base.model_normal_p"/>
              <field name="view_type">form</field>
            <field name="view_mode">form</field>

            <field name="code">action = env['normal.p'].browse(context.get('active_ids', [])).donate_batch()</field>
        </record>

    </data>
</odoo>