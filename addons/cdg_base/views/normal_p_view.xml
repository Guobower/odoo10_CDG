<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="normal_p_tree" model="ir.ui.view">
            <field name="name">normal p t</field>
            <field name="model">normal.p</field>
            <field name="arch" type="xml">
                <tree default_order='new_coding'>
                    <field name="new_coding"/>
                    <field name="w_id"/>
                    <field name="name"/>
                    <field name="con_phone"/>
                    <field name="zip"/>
                    <field name="rec_addr"/>
                    <field name="zip_code"/>
                    <field name="con_addr"/>
                    <field name="donate_family_list"/>
                    <field name="cashier_name"/>
                    <!-- 原始資料還有"收據寄送" "報表寄送" -->
                 <!--   <field name="type" widget="many2many_tags"/> -->
                </tree>
            </field>
        </record>


        <record id="normal_p_batch_tree" model="ir.ui.view">
            <field name="name">normal_p_batch_tree</field>
            <field name="model">normal.p</field>
            <field name="arch" type="xml">
                <tree default_order='new_coding'>
                    <field name="new_coding"/>
                    <field name="w_id"/>
                    <field name="name"/>
                    <field name="con_phone"/>
                    <field name="rec_addr"/>
                    <field name="donate_family_list"/>
                    <field name="donate_batch_setting"/>
                    <button name="check_batch_donate" string="確認" type="object"/>
                    <field name="cashier_name"/>
                </tree>
            </field>
        </record>

        <record id="normal_p_form" model="ir.ui.view">
            <field name="name">normal p f</field>
            <field name="model">normal.p</field>
            <field name="arch" type="xml">
                <form string="" class="o_sale_order">
                    <header>
                        <!--<button string="轉眷屬檔" name="data_input_form_DB" type="object"/>-->
                        <!--<button string="設定眷屬" name="set_parent" type="object"/>-->
                    <!--&lt;!&ndash;    <button string="轉會員顧問" name="input_member" type="object" /> &ndash;&gt;-->
                        <!--<button string="轉會員" name="input_member" type="object" />-->
                        <!--<button string="轉顧問" name="input_member" type="object" />-->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="start_donate" string="捐款作業"
                                    type="object" class="oe_stat_button" icon="fa-dollar" attrs="{'invisible': [('name', '=', False)]}">
                            </button>
                            <button name="historypersonal" string="歷史捐款"
                                    type="object" class="oe_stat_button" icon="fa-book" >
                            </button>
                            <button name="action_chang_donater_wizard" string="合併捐款者"
                                    type="object" class="oe_stat_button" icon="fa-exchange" attrs="{'invisible': [('name', '=', False)]}">
                            </button>
                            <button name="action_donate_single_trans" string="批次更改收據"
                                    type="object" class="oe_stat_button" icon="fa-edit" attrs="{'invisible': [('name', '=', False)]}">
                            </button>
                            <button name="%(cdg_base.house_year_action)d" string="列印年度收據"
                                    type="action" class="oe_stat_button" icon="fa-print" attrs="{'invisible': [('donate_family1', '=', False)]}">
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="new_coding" readonly="1"/>
                            </h1>
                        </div>
                        <group col="4">
                            <field name="name"/>
                            <field name="type" widget="many2many_tags" options="{'no_quick_create': True, 'no_create_edit' : True}" domain="[('name','!=','捐款者')]"/>
                            <field name="parent" options="{'no_quick_create': True, 'no_create_edit' : True}"
                                   context="{'tree_view_ref' : 'cdg_base.normal_p_tree','form_view_ref' : 'cdg_base.normal_p_form'}"/>
                            <field name="cashier_name" context="{'form_view_ref' : 'cdg_base.cashier_base_form'}" />
                            <field name="report_send"/>
                            <field name="rec_send"/>
                            <field name="merge_report"/>
                            <field name="check_donate_order"/>
                            <!--<field name="old_coding" invisible = "1"/>-->
                            <!--<field name="new_coding" invisible = "1"/>-->
                        </group>
                         <notebook>
                                <page string="基本資料">
                                    <div class="col-md-12">
                                        <group col="4">
                                            <field name="birth"/>
                                            <field name="self_iden"/>
                                        </group>
                                        <group col="4">
                                            <field name="con_phone"/>
                                            <field name="cellphone"/>
                                        </group>
                                        <group col="8">
                                            <field name="zip"/>
                                            <field name="rec_addr" colspan="6"/>
                                            <field name="is_same_addr"/>
                                        </group>
                                        <group col="8">
                                            <field name="zip_code"/>
                                            <field name="con_addr" colspan="6"/>
                                        </group>
                                        <group col="6">
                                            <field name="donate_family_list" colspan="6"/>
                                        </group>
                                        <group col="6">
                                            <field name="ps" colspan="6"/>
                                        </group>
                                    </div>
                                </page>
                                <page string="團員眷屬">
                                    <div class="oe_button_box" name="button_box">
                                        <button string="合併收據地址" name="combine_addr" type="object" class="oe_stat_button" icon="fa-exchange"/>
                                        <button string="全部變更地址" name="all_addr_chnage" type="object" class="oe_stat_button" icon="fa-location-arrow"/>
                                    </div>
                                    <field name="donate_family1" context="{'form_view_ref' : 'cdg_base.normal_p_easy_view_form', 'default_rec_addr': rec_addr,'default_zip': zip,'default_cashier': cashier_name}">
                                        <tree default_order='sequence'>
                                            <field name="sequence"/>
                                            <field name="new_coding"/>
                                            <field name="name"/>
                                            <field name="is_donate"/>
                                            <field name="is_merge"/>
                                            <field name="rec_addr"/>
                                            <field name="last_donate_type"/>
                                            <field name="last_donate_money"/>
                                            <button name="toggle_donate" string="捐助變更" type="object"/>
                                            <button name="toggle_merge" string="合併變更" type="object"/>
                                            <field name="is_delete"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="約定轉帳眷屬">

                                </page>
                                <page string="個人歷史捐款明細">
                                    <field name="donate_history_ids"/>
                                </page>
                                <page string="施棺紀錄">
                                </page>
                                <page string="約定轉帳">
                                    <span STYLE='FONT-SIZE:25PX'>約定轉帳</span>
                                    <group col="4">
                                        <field name="prints"/>
                                        <field name="prints_id"/>
                                        <field name="bank_id"/>
                                        <field name="bank_id2"/>
                                        <field name="account"/>
                                        <field name="ps2"/>
                                        <field name="prints_date"/>
                                        <!--<field name="self_iden"/>-->
                                        <field name="bank"/>
                                        <field name="bank2"/>
                                    </group>
                                </page>
                                <page string="會員繳費明細">
                                    <field name="member_pay_history"/>
                                </page>
                                <page string="顧問繳費明細">
                                    <field name="consultant_pay_history"/>
                                </page>

                            </notebook>
                    </sheet>
                </form>
            </field>
        </record>

