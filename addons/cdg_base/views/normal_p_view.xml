<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="normal_p_tree" model="ir.ui.view">
            <field name="name">normal p t</field>
            <field name="model">normal.p</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="new_coding"/>
                    <field name="w_id"/>
                    <field name="name"/>
                    <field name="con_phone"/>
                    <field name="con_addr"/>
                    <field name="donate_family_list"/>
                    <field name="cashier_name"/>
                    <!-- 原始資料還有"收據寄送" "報表寄送" -->
                 <!--   <field name="type" widget="many2many_tags"/> -->
                </tree>
            </field>
        </record>

        <record id="normal_p_form" model="ir.ui.view">
            <field name="name">normal p f</field>
            <field name="model">normal.p</field>
            <field name="arch" type="xml">
                <form string="" class="o_sale_order">
                    <header>
                        <!--<button string="轉眷屬檔" name="data_input_form_DB" type="object"/>-->
                        <!--<button string="設定眷屬" name="set_parent" type="object"/>-->
                    <!--&lt;!&ndash;    <button string="轉會員顧問" name="input_member" type="object" /> &ndash;&gt;-->
                        <!--<button string="轉會員" name="input_member" type="object" />-->
                        <!--<button string="轉顧問" name="input_member" type="object" />-->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="start_donate" string="捐款作業"
                                    type="object" class="oe_stat_button" icon="fa-dollar">
                            </button>
                            <button name="historypersonal" string="歷史捐款"
                                    type="object" class="oe_stat_button" icon="fa-book">
                            </button>
                            <button name="action_chang_donater_wizard" string="合併捐款者"
                                    type="object" class="oe_stat_button" icon="fa-exchange">
                            </button>

                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="new_coding" readonly="1"/>
                            </h1>
                        </div>
                        <group col="4">
                            <field name="name"/>
                            <field name="type" widget="many2many_tags" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="parent" options="{'no_quick_create': True, 'no_create_edit' : True}"
                                   context="{'tree_view_ref' : 'cdg_base.normal_p_tree','form_view_ref' : 'cdg_base.normal_p_form'}"/>
                            <field name="cashier_name" context="{'form_view_ref' : 'cdg_base.cashier_base_form'}" />
                            <field name="report_send"/>
                            <field name="rec_send"/>
                            <field name="merge_report"/>
                            <field name="old_coding" invisible = "1"/>
                            <!--<field name="new_coding" invisible = "1"/>-->
                        </group>
                         <notebook>
                                <page string="基本資料">
                                    <div class="col-md-12">
                                        <group col="4">
                                            <field name="birth"/>
                                            <field name="self_iden"/>
                                        </group>
                                        <group col="4">
                                            <field name="con_phone"/>
                                            <field name="cellphone"/>
                                        </group>
                                        <group col="8">
                                            <field name="zip"/>
                                            <field name="rec_addr" colspan="6"/>
                                            <field name="is_same_addr"/>
                                        </group>
                                        <group col="8">
                                            <field name="zip_code"/>
                                            <field name="con_addr" colspan="6"/>
                                        </group>
                                        <group col="6">
                                            <field name="donate_family_list" colspan="6"/>
                                        </group>
                                        <group col="6">
                                            <field name="ps" colspan="6"/>
                                        </group>
                                    </div>
                                </page>
                                <page string="團員眷屬">
                                    <div class="oe_button_box" name="button_box">
                                        <button string="合併收據地址" name="button1" type="object" class="oe_stat_button" icon="fa-exchange"/>
                                        <button string="全部變更地址" name="button2" type="object" class="oe_stat_button" icon="fa-location-arrow"/>
                                    </div>
                                    <field name="donate_family1" context="{'form_view_ref' : 'cdg_base.normal_p_easy_view_form'}">
                                        <tree>
                                            <field name="sequence" widget="handle"/>
                                            <field name="new_coding"/>
                                            <field name="name"/>
                                            <field name="is_donate"/>
                                            <field name="is_merge"/>
                                            <field name="rec_addr"/>
                                            <button name="toggle_donate" string="捐助變更" type="object"/>
                                            <button name="toggle_merge" string="合併變更" type="object"/>
                                        </tree>
                                    </field>

                                </page>
                                <page string="約定轉帳眷屬">

                                </page>
                                <page string="個人歷史捐款明細">
                                    <field name="donate_history_ids"/>
                                </page>
                                <page string="施棺紀錄">
                                </page>
                                <page string="約定轉帳">
                                    <span STYLE='FONT-SIZE:25PX'>約定轉帳</span>
                                    <group col="4">
                                        <field name="prints"/>
                                        <field name="prints_id"/>
                                        <field name="bank_id"/>
                                        <field name="bank_id2"/>
                                        <field name="account"/>
                                        <field name="ps2"/>
                                        <field name="prints_date"/>
                                        <field name="self_iden"/>
                                        <field name="bank"/>
                                        <field name="bank2"/>
                                    </group>
                                </page>
                                <page string="會員繳費明細">
                                    <field name="member_pay_history"/>
                                </page>
                                <page string="顧問繳費明細">
                                    <field name="consultant_pay_history"/>
                                </page>

                            </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="normal_p_search" model="ir.ui.view">
            <field name="name">normal p s</field>
            <field name="model">normal.p</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="new_coding"/>
                    <field name="w_id"/>
                    <field name="con_phone"/>
                    <field name="cellphone"/>
                    <field name="con_addr"/>
                    <filter string="戶長" name="top_of_home" domain="[('donate_family1','!=', False)]" />
                </search>
            </field>
        </record>

        <record id="normal_p_easy_view_form" model="ir.ui.view">
            <field name="name">normal_p_easy_view</field>
            <field name="model">normal.p</field>
            <field name="arch" type="xml">
                <form>
                    <div class="col-md-12">
                        <group col="9">
                            <field name="name" colspan="3"/>
                            <field name="type" widget="many2many_tags" options="{'no_quick_create': True, 'no_create_edit' : True}" colspan="3"/>
                            <field name="cashier" options="{'no_quick_create': True, 'no_create_edit' : True}" colspan="3"/>
                            <field name="merge_report" colspan="3"/>
                            <field name="is_donate" colspan="3"/>
                            <field name="is_merge" colspan="3"/>
                        </group>
                        <group col="8">
                            <field name="zip_code" colspan="2" string="聯絡地址"/>
                            <field name="con_addr" colspan="6" nolabel="1"/>
                        </group>
                        <group>
                            <field name="donate_family_list"/>
                                <!--<field name="parent" options="{'no_quick_create': True, 'no_create_edit' : True}"-->
                                       <!--context="{'tree_view_ref' : 'cdg_base.normal_p_tree','form_view_ref' : 'cdg_base.normal_p_form'}"/>-->
                        </group>
                        <group>
                            <field name="ps" />
                        </group>
                    </div>
                </form>
            </field>
        </record>

        <record id="normal_p_action" model="ir.actions.act_window">
            <field name="name">捐款者基本資料</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">normal.p</field>
            <field name="view_mode">tree,form</field>
                <field name="limit">10</field> <!-- 用來調整tree顯示的筆數 -->
                <field name="search_view_id" ref="normal_p_search"/>
                <field name="view_ids"
                       eval="[(5, 0, 0),
                       (0, 0, {'view_mode': 'tree', 'view_id': ref('normal_p_tree')}),
                       (0, 0, {'view_mode': 'form', 'view_id': ref('normal_p_form')}),
                       ]"/>
                <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
                </field>
        </record>

        <record id="normal_p_action" model="ir.actions.act_window">
            <field name="name">捐款者基本資料</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">normal.p</field>
            <field name="view_mode">tree,form</field>
                <field name="limit">10</field> <!-- 用來調整tree顯示的筆數 -->
                <field name="search_view_id" ref="normal_p_search"/>
                <field name="view_ids"
                       eval="[(5, 0, 0),
                       (0, 0, {'view_mode': 'tree', 'view_id': ref('normal_p_tree')}),
                       (0, 0, {'view_mode': 'form', 'view_id': ref('normal_p_form')}),
                       ]"/>
                <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
                </field>
        </record>

        <record id="collect_search" model="ir.ui.view">
            <field name="name">collect_search</field>
            <field name="model">normal.p</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="cashier_name"/>

                    <filter string="基本會員" name="member_type" domain="[('member_type','=',1 )]"/>
                    <filter string="贊助會員" name="member_type" domain="[('member_type','=',2 )]"/>
                </search>
            </field>
        </record>

        <record id="action_donate_order_batch" model="ir.actions.server">
            <field name="name">批次捐款</field>
            <field name="model_id" ref="model_normal_p"/>
            <field name="code">
                action =  object.donate_batch(context.get('active_ids', []))
            </field>
        </record>
<!--object = normal_p -->

        <record model="ir.values" id="ir_values_create_delivery_button">
            <field name="name">Create Delivery</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.server,%d'%action_donate_order_batch"/>
            <field name="key">action</field>
            <field name="object" eval="True"/>
            <field name="model">normal.p</field>
        </record>

         <record id="collect_action" model="ir.actions.act_window">
             <field name="name">收費員批次捐款</field>
             <field name="type">ir.actions.act_window</field>
             <field name="res_model">normal.p</field>
             <field name="view_mode">tree,form</field>
             <field name="domain">[('donate_family_list','!=','')]</field>
             <field name="search_view_id" ref="collect_search"/>
             <field name="view_ids"
                   eval="[(5, 0, 0),
                   (0, 0, {'view_mode': 'tree', 'view_id': ref('normal_p_tree')}),
                   (0, 0, {'view_mode': 'form', 'view_id': ref('normal_p_form')}),
                   ]"/>
             <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
          </p><p>
            <!-- More details about what a user can do with this object will be OK -->
          </p>
        </field>
        </record>

    </data>
</odoo>