        <record id="normal_p_search" model="ir.ui.view">
            <field name="name">normal p s</field>
            <field name="model">normal.p</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="new_coding"/>
                    <field name="w_id"/>
                    <field name="con_phone"/>
                    <field name="cellphone"/>
                    <field name="rec_addr"/>
                    <field name="con_addr"/>
                    <field name="cashier_name"/>
                    <field string="上次捐款日期-起" name="last_donate_date" filter_domain="[('last_donate_date', '&gt;=',self )]"/>
                    <field string="上次捐款日期-迄" name="last_donate_date" filter_domain="[('last_donate_date', '&lt;=',self)]"/>
                    <filter string="戶長" name="top_of_home" domain="[('donate_family1','!=', False)]"/>
                </search>
            </field>
        </record>

        <record id="normal_p_easy_view_form" model="ir.ui.view">
            <field name="name">normal_p_easy_view</field>
            <field name="model">normal.p</field>
            <field name="arch" type="xml">
                <form class="o_sale_order">
                    <div class="col-md-12">
                        <div class="oe_title">
                            <h1>
                                <field name="new_coding" readonly="1"/>
                            </h1>
                        </div>
                        <group col="9">
                            <field name="name" colspan="3"/>
                            <field name="type" widget="many2many_tags" options="{'no_quick_create': True, 'no_create_edit' : True}" colspan="3" domain="[('name','!=','捐款者')]"/>
                            <field name="cashier" options="{'no_quick_create': True, 'no_create_edit' : True}" colspan="3"/>
                            <field name="merge_report" colspan="3"/>
                            <field name="is_donate" colspan="3"/>
                            <field name="is_merge" colspan="3"/>
                        </group>
                        <group col="8">
                            <field name="zip" colspan="2" string="收據寄送地址"/>
                            <field name="rec_addr" colspan="6" nolabel="1" />
                        </group>
                        <group>
                            <field name="donate_family_list"/>
                                <!--<field name="parent" options="{'no_quick_create': True, 'no_create_edit' : True}"-->
                                       <!--context="{'tree_view_ref' : 'cdg_base.normal_p_tree','form_view_ref' : 'cdg_base.normal_p_form'}"/>-->
                        </group>
                        <group>
                            <field name="ps" />
                        </group>
                    </div>
                </form>
            </field>
        </record>

