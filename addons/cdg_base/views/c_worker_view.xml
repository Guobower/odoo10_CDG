<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="c_worker_tree" model="ir.ui.view">
            <field name="name">c worker t</field>
            <field name="model">c.worker</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="w_id"/>
                    <field name="name"/>
                    <field name="now_job"/>
                    <field name="con_phone"/>
                    <field name="con_phone2"/>
                    <field name="cellphone"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <record id="c_worker_form" model="ir.ui.view">
            <field name="name">c worker f</field>
            <field name="model">c.worker</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button string="匯入資料試試看" name="data_input_from_database" type="object"/>
                    </header>
                    <sheet>
                        <group col="7">
                            <field name="w_id" colspan="2"/>
                            <field name="name" colspan="2"/>
                            <field name="create_date1" colspan="3"/>
                        </group>
                        <notebook>
                            <page string="基本資料">
                                <group col="4">
                                    <field name="self_iden"/>
                                    <field name="sex"/>
                                    <field name="birth"/>
                                    <field name="now_job"/>
                                    <field name="come_date"/>
                                    <field name="lev_date"/>
                                    <field name="con_phone"/>
                                    <field name="con_phone2"/>
                                    <field name="highest_stu"/>
                                    <field name="cellphone"/>
                                </group>
                                <group col="4">
                                    <field name="email"/>
                                    <field name="con_addr"/>
                                    <field name="ps"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>



          <record id="c_worker_action" model="ir.actions.act_window">
            <field name="name">員工基本資料</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">c.worker</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


    </data>
</odoo>