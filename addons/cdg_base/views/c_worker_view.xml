<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="c_worker_action" model="ir.actions.act_window">
            <field name="name">員工基本資料</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">c.worker</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('job_type','=','1')]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <record id="c_worker_tree" model="ir.ui.view">
            <field name="name">c worker t</field>
            <field name="model">c.worker</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="w_id"/>
                    <field name="name"/>
                    <field name="now_job"/>
                    <field name="con_phone"/>
                    <field name="con_phone2"/>
                    <field name="cellphone"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <record id="c_worker_form" model="ir.ui.view">
            <field name="name">c worker f</field>
            <field name="model">c.worker</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button string="匯入資料試試看" name="data_input_from_database" type="object"/>
                    </header>
                    <sheet>
                        <group col="6">
                            <field name="w_id"/>
                            <field name="name"/>
                            <field name="create_date1"/>
                        </group>
                        <notebook>
                            <page string="基本資料">
                                <group col="4">
                                    <field name="self_iden"/>
                                    <field name="birth"/>
                                    <field name="come_date"/>
                                    <field name="con_phone"/>
                                    <field name="cellphone"/>
                                    <field name="sex"/>
                                    <field name="job_type"/>
                                    <field name="now_job"/>
                                </group>
                                <group col="4">
                                    <field name="lev_date"/>
                                    <field name="con_phone2"/>
                                    <field name="highest_stu"/>
                                    <field name="email"/>
                                    <field name="con_addr"/>
                                    <field name="ps"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="fee_basic_setting_action" model="ir.actions.act_window">
            <field name="name">基本設定檔</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">basic.setting</field>
            <field name="view_mode">form</field>
            <field name="view_ids" eval="[(5, 0, 0),(0, 0, {'view_mode': 'form', 'view_id': ref('fee_basic_setting_form')}),]"/>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <record id="fee_basic_setting_tree" model="ir.ui.view">
            <field name="name">basic setting t</field>
            <field name="model">basic.setting</field>
            <field name="arch" type="xml">
                <tree string="">
                </tree>
            </field>
        </record>

        <record id="fee_basic_setting_form" model="ir.ui.view">
            <field name="name">basic setting f</field>
            <field name="model">basic.setting</field>
            <field name="arch" type="xml">
                <form string="捐款及會費基本設定">
                    <header>
                        <!--<button string="儲存設定" name="fee_basic_setting" type="object"/>-->
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="Basic_donations"/>
                            <field name="Annual_membership_fee"/>
                            <field name="Annual_consultants_fee"/>
                            <field name="coffin_amount"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>