<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="donate_single_view_tree" model="ir.ui.view">
            <field name="name">donate single tree</field>
            <field name="model">donate.single</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="state"/>
                    <field name="donate_id"/>
                    <field name="name"/>
                    <field name="create_date" string="捐款日期"/>
                    <field name="donate_total"/>
                </tree>
            </field>
        </record>

        <record id="donate_single_view_form" model="ir.ui.view">
            <field name="name">donate single form</field>
            <field name="model">donate.single</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="button_to_cnacel_donate" string="作廢" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="1,2,3"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--<button name="bring_last_history" string="上次捐款紀錄" type="object" class="oe_stat_button"-->
                                    <!--icon="fa-level-up">-->
                            <!--</button>-->
                            <button name="parent_list_creat" string="載入眷屬" type="object" class="oe_stat_button"
                                    icon="fa-users">
                                <!--將該成員眷屬列出-->
                            </button>
                            <button name="add_to_list" string="產生捐款明細" type="object" class="oe_stat_button"
                                    icon="fa-list">
                            </button>
                        </div>
                        <group col="4">
                            <field name="donate_id" colspan="4"/>
                            <field name="donate_member" colspan="4"
                                   context="{'tree_view_ref' : 'cdg_base.normal_p_tree','form_view_ref' : 'cdg_base.normal_p_form'}"/>
                            <field name="name"/>
                            <field name="self_iden"/>
                            <field name="cellphone"/>
                            <field name="con_phone"/>
                            <field name="zip_code"/>
                            <field name="con_addr"/>
                            <field name="donate_total"/>
                            <field name="work_id"/>
                            <field name="history_donate_flag"/>
                        </group>

                        <notebook>
                            <page string="捐款">
                                <span STYLE='FONT-SIZE:25PX'>捐款項目</span>
                                <group col="6">
                                    <field name="bridge"/>
                                    <field name="bridge_money" nolabel="1"/>
                                    <field name="road"/>
                                    <field name="road_money" nolabel="1"/>
                                    <field name="coffin"/>
                                    <field name="coffin_money" nolabel="1"/>
                                    <field name="poor_help" />
                                    <field name="poor_help_money" nolabel="1"/>
                                    <field name="others"/>
                                    <field name="others_money" nolabel="1"/>
                                    <field name="donate_date"/>

                                </group>
                                <field name="family_check">
                                    <tree editable="bottom">
                                        <field name="family_new_coding"/>
                                        <field name="donate_member"/>
                                        <field name="is_donate"/>
                                        <field name="is_merge"/>
                                    </tree>
                                </field>
                                <span STYLE='FONT-SIZE:25PX'>捐款方式</span>
                                <group col="8">
                                    <field name="cash"/>
                                    <field name="mail"/>
                                    <field name="credit_card"/>
                                    <field name="bank"/>
                                    <field name="receipt_send"/>
                                    <field name="report_send"/>
                                    <field name="year_receipt_send"/>
                                </group>
                            </page>
                            <!--<page string="眷屬明細">-->
                                <!--<field name="person_check">-->
                                    <!--<field name="new_coding"/>-->
                                    <!--<field name="name"/>-->
                                    <!--<field name="birth"/>-->
                                <!--</field>-->
                            <!--</page>-->
                            <page string="捐款記錄明細">
                                <field name="donate_list">
                                    <tree>
                                        <field name="state"/>
                                        <field name="donate_id"/>
                                        <field name="paid_id"/>
                                        <field name="donate_member"/>
                                        <field name="donate_type"/>
                                        <field name="donate"/>
                                    </tree>

                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="donate_single_view_search" model="ir.ui.view">
            <field name="name">donate_single_view_search</field>
            <field name="model">donate.single</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="key_in_user"/>
                    <field name="work_id"/>
                    <field string="捐款日期-起" name="create_date" filter_domain="[('create_date', '&gt;',self )]"/>
                    <field string="捐款日期-迄" name="create_date" filter_domain="[('create_date', '&lt;=',self)]"/>

                    <filter string="未列印的捐款單" name="un_print_donate" domain="[('state','=',1)]"/>
                    <filter string="捐款日期" name="donate_date_today" domain="[('create_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('create_date', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:23:59'))]"/>
                    <filter string="捐款來源-現金" name="cash" domain="[('cash','=','True')]"/>
                    <filter string="捐款來源-郵政劃撥" name="mail" domain="[('mail','=','True')]"/>
                    <filter string="捐款來源-信用卡" name="credit_card" domain="[('credit_card','=','True')]"/>
                    <filter string="捐款來源-銀行轉帳" name="bank" domain="[('bank','=','True')]"/>
                </search>
            </field>
        </record>

        <record id="donate_single_view_action" model="ir.actions.act_window">
            <field name="name">已產生捐款</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">donate.single</field>
            <field name="view_mode">tree,form</field>
            <!--<field name="domain">[('create_uid','=',uid)]</field>-->
            <field name="context">{'search_default_un_print_donate': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <record id="start_donate_action" model="ir.actions.act_window">
            <field name="name">開始捐款</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">donate.single</field>
            <field name="view_mode">form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <record id="receipt_analysis_action" model="ir.actions.act_window">
            <field name="name">收據分析表</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">donate.single</field>
            <field name="view_mode">pivot</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <record id="sreceipt_analysis" model="ir.ui.view">
            <field name="name">收據分析表</field>
            <field name="model">donate.single</field>
            <field name="arch" type="xml">
                <pivot string="收據分析表">
                    <field name="work_id" type="row"/>
                    <field name="key_in_user" type="row"/>
                    <field name="create_date" type="measure" string="收據日期"/>
                    <field name="sreceipt_number" type="measure"/>
                    <field name="donate_total" type="measure"/>
                </pivot>
            </field>
        </record>

    </data>
</odoo>