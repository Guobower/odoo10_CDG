                <form string="">
                    <header>
                        <button string="匯入施棺捐款檔" name="data_input_from_database" type="object"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="coffin_id"/>
                                <field name="donate_id"/>
                                <field name="donate_price"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
