<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="consultant_base_tree" model="ir.ui.view">
            <field name="name">consultant base tree</field>
            <field name="model">normal.p</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="new_coding"/>
                    <field name="name"/>
                    <field name="con_phone"/>
                    <field name="con_phone2"/>
                    <field name="cellphone"/>
                    <field name="con_addr"/>
                    <field name="self"/>
                </tree>
            </field>
        </record>
        <record id="consultant_base_form" model="ir.ui.view">
            <field name="name">consultant base form</field>
            <field name="model">normal.p</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group col="9">
                            <field name="w_id" string="顧問編號" colspan="2"/>
                            <field name="name" string="顧問姓名" colspan="2"/>
                            <field name="create_date" string="創建日期" colspan="5"/>
                        </group>
                        <notebook>
                            <page string="基本資料">
                                <group col="4">
                                    <field name="birth"/>
                                    <field name="con_phone"/>
                                    <field name="address"/>
                                    <field name="con_addr"/>
                                    <field name="cellphone"/>
                                    <field name="con_phone2"/>
                                    <field name="ps"/>
                                </group>
                                <span STYLE='FONT-SIZE:25PX'>其他資料</span>
                                <group col="4">
                                    <field name="hire_date"/>
                                    <field name="cashier" context="{'form_view_ref' : 'cdg_base.cashier_base_form'}"/>
                                    <field name="rec_send"/>
                                    <field name="self"/>
                                    <field name="report_send"/>
                                    <field name="thanks_send"/>
                                </group>
                            </page>
                            <page string="繳費狀況">
                                <field name="consultant_pay_history"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="consultant_base_action" model="ir.actions.act_window">
            <field name="name">顧問基本資料</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">normal.p</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type.id','=',4 )]</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                   (0, 0, {'view_mode': 'tree', 'view_id': ref('consultant_base_tree')}),
                   (0, 0, {'view_mode': 'form', 'view_id': ref('consultant_base_form')}),
                   ]"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
          </p><p>
            <!-- More details about what a user can do with this object will be OK -->
          </p>
        </field>
    </record>
    </data>
</odoo>