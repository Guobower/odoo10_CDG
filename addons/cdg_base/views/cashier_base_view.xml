<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cashier_base_tree" model="ir.ui.view">
            <field name="name">cashier base t</field>
            <field name="model">c.worker</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="w_id"/>
                    <field name="name"/>
                    <field name="con_phone"/>
                    <field name="cellphone"/>
                    <field name="con_addr"/>
                    <!--<field nmae="db_chang_date"/>-->
                </tree>
            </field>
        </record>
        <record id="cashier_base_form" model="ir.ui.view">
            <field name="name">cashier base f</field>
            <field name="model">c.worker</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button string="匯入收費員檔" name="data_input_cashier" type="object"/>
                    </header>
                    <sheet>
                        <group col="6">
                                <field name="w_id" string="收費員編號"/>
                                 <field name="name" string="收費員姓名"/>
                                 <field name="create_date"/>
                                <!--<field name="db_chang_date"/>-->
                        </group>
                        <notebook>
                            <page string="基本資料">
                                <group col="4">
                                        <field name="self_iden"/>
                                        <field name="job_type"/>
                                </group>
                                <group col="4">
                                    <field name="con_phone"/>
                                    <field name="con_phone2"/>
                                    <field name="cellphone"/>
                                </group>
                                <group col="3">
                                    <field name="zip_code" string="通訊地址" />
                                    <field name="con_addr" nolabel="1"/>
                                    <field name="ps"/>
                                </group>
                            </page>
                            <page string="捐款者收費名冊">
                                <group>
                                    <field name="normal_cash"/>
                                </group>
                            </page>
                            <page string="會員收費名冊">
                                <group>
                                    <field name="member_cash"/>
                                </group>
                            </page>
                            <page string="顧問收費名冊">
                                <group>
                                    <field name="consultant_cash"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="cashier_base_action" model="ir.actions.act_window">
        <field name="name">收費員基本資料</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">c.worker</field>
        <field name="view_mode">tree,form</field>
                           <field name="view_ids"
                   eval="[(5, 0, 0),
                   (0, 0, {'view_mode': 'tree', 'view_id': ref('cashier_base_tree')}),
                   (0, 0, {'view_mode': 'form', 'view_id': ref('cashier_base_form')}),
                   ]"/>
            <field name="domain">[('job_type','=','2')]</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
          </p><p>
            <!-- More details about what a user can do with this object will be OK -->
          </p>
        </field>
    </record>
    </data>
</odoo>