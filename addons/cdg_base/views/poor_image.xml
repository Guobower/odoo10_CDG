<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="poor_image_form" model="ir.ui.view">
            <field name="name">poor image form</field>
            <field name="model">poor.image</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                          <field name="case_image_name" string="影像資料名稱"/>
                          <field name="case_image" widget="image" string="案件影像資料"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <act_window id="action_poor_image" name="案件影像資料" res_model="poor.image"
                    view_mode="form" target="new" multi="False"/>
    </data>
</odoo>